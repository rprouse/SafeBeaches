@model IQueryable<SafeBeaches.Models.Beach>

@section scripts
{
}

<div class="beaches">
  <div class="list-group">
    @foreach (var beach in Model)
    {
      var reading = beach.GetLatestReading();
      var safe = reading == null ? "list-group-item-warning" : (reading.Safe ? "list-group-item-success" : "list-group-item-danger");
      <a href="#" class="list-group-item @safe">@beach.Name</a>
    }
  </div>
</div>